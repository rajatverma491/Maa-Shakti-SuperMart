<h3>Galla</h3>


@using (Html.BeginForm("GallaDekho", "Billings"))
{


    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Start date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("StartDate", DateTime.Now.ToShortDateString(), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("End date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("EndDate", DateTime.Now.ToShortDateString(), new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}





